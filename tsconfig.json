{
  "compilerOptions": {
    "rootDir": "src/",
    "outDir": "dist/",
    "incremental": true,
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    "listEmittedFiles": true,
    "module": "commonjs",
    "target": "es2017",
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
